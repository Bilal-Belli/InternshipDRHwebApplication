        <div class="container">
            <div class="py-3"></div>
            <!--  -->
            <div class="row" id="section1">
                <div class="breadcrumb breadcrumb-item active">
                    Gestion des Directions
                </div>
            </div>
            <div class="row">
                <div class="col d-flex justify-content-center">
                    <a href="ajouterDir" style="text-decoration:none;">
                        <div class="card text-white bg-success mb-3" style="max-width: 25rem; width: 25rem;">
                            <div class="card-body d-flex justify-content-center">
                                <p class="card-text">Ajouter une Direction</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col d-flex justify-content-center">
                    <a href="supprimerDir" style="text-decoration:none;">
                        <div class="card text-white bg-danger mb-3" style="max-width: 25rem; width: 25rem;">
                            <div class="card-body d-flex justify-content-center">
                                <p class="card-text">Supprimer une Direction</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="row">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">ID Direction</th>
                            <th scope="col">Email Compte Directeur</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <% data1.forEach(entry => { %>
                            <th scope="row"><%= entry.IDdirection %></th>
                            <td><%= entry.emailCompteDirecteur %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <div class="py-3"></div>
            <!--  -->
            <div class="row" id="section2">
                <div class="breadcrumb breadcrumb-item active">
                    Gestion des Sous Directions
                </div>
            </div>
            <div class="row">
                <div class="col d-flex justify-content-center">
                    <a href="ajouterSousDir" style="text-decoration:none;">
                        <div class="card text-white bg-success mb-3" style="max-width: 25rem; width: 25rem;">
                            <div class="card-body d-flex justify-content-center">
                                <p class="card-text">Ajouter une Sous-Direction</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col d-flex justify-content-center">
                    <a href="supprimerSousDir" style="text-decoration:none;">
                        <div class="card text-white bg-danger mb-3" style="max-width: 25rem; width: 25rem;">
                            <div class="card-body d-flex justify-content-center">
                                <p class="card-text">Supprimer une Sous-Direction</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="row">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">ID Sous direction</th>
                            <th scope="col">Direction</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <% data2.forEach(entry => { %>
                            <th scope="row"><%= entry.IDsousDirection %></th>
                            <td><%= entry.IDdirection %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <div class="py-3"></div>
            <!--  -->
            <div class="row" id="section3">
                <div class="breadcrumb breadcrumb-item active">
                    Gestion des Départements
