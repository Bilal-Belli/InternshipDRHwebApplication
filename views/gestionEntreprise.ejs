                    <tbody>
                        <tr>
                            <% data4.forEach(entry => { %>
                            <th scope="row"><%= entry.IDequipe %></th>
                            <td><%= entry.emailCompteChefEquipe %></td>
                            <td><%= entry.IDdeparetement %></td>
