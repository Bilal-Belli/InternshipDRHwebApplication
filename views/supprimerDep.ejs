<!doctype html>
<html>
<head>
    <title>Admin - Département</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk&display=swap" rel="stylesheet">
    <!-- <link  rel="shortcut icon"  type="image/png"  href="" > -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body class="bg-image" style="background-image: url('background.png'); background-repeat: no-repeat;background-attachment: fixed;  background-size: cover;">
    <nav class="navbar navbar-light bg-success">
        <a class="navbar-brand text-light" href="adminaccueil">Accueil</a>
        <a class="navbar-brand text-light" href="gestionEntreprise">Retour</a>
        <button class="btn btn-outline-light my-2 my-sm-0"><a class="text-light" href="/">Déconnecter</a></button>
    </nav>
    <section class="ftco-section">
        <div class="container">
            <div class="p-2"></div>
            <div class="row justify-content-center">
                <div class="shadow-lg col-md-7 col-lg-5 bg-light rounded">
                    <div class="p-4 p-md-5">
                        <form action="/supprimerDep" method="POST">
                            <select class="custom-select my-1 mr-sm-2" id="selectedDEP">
                                <% data.forEach(entry => { %>
                                <option value="Direction"><%= entry.IDdepartement%></option>
                                <% }) %>
                            </select>
                            <div class="form-group">
                                <input type="text" class="form-control rounded-left" placeholder="Ici confirmer le département" name="DEP" id="confirmedDEP" required>
                            </div>
                            <div class="form-group"></div>
                            <button type="submit" id="submitBtn" class="form-control btn btn-danger rounded submit px-3">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="p-4"></div>
    <div class="p-4"></div>
</body>
<footer class="fixed-bottom">
    <div style="background-color:#00930080;">
        <div class="footer-copyright text-center py-2 text-light" style="background-color:#00930080;">
            © <script>document.write(new Date().getFullYear())</script> Copyright | Direction des resources Humaine - DRH
        </div>
    </div>
</footer>
<script>
    let validSubmit=false;
    $(document).ready(function() {
        $('#confirmedDEP').on('input', function() {
            var input = $(this);
            var confirmedDEP = input.val();
            text = document.getElementById("selectedDEP").options[document.getElementById("selectedDEP").selectedIndex].text;
            console.log(text);
            if (confirmedDEP == text) {
                validSubmit=true;
                document.getElementById("submitBtn").disabled = false;
            } else {
                validSubmit=false;
                document.getElementById("submitBtn").disabled = true;
            }
        });});
</script> 
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</html>