<!doctype html>
<html>
<head>
    <title>Admin - Département</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk&display=swap" rel="stylesheet">
    <!-- <link  rel="shortcut icon"  type="image/png"  href="" > -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body class="bg-image" style="background-image: url('background.png'); background-repeat: no-repeat;background-attachment: fixed;  background-size: cover;">
    <nav class="navbar navbar-light bg-success">
        <a class="navbar-brand text-light" href="adminaccueil">Accueil</a>
        <a class="navbar-brand text-light" href="gestionEntreprise">Retour</a>
        <button class="btn btn-outline-light my-2 my-sm-0"><a class="text-light" href="/">Déconnecter</a></button>
    </nav>
    <section class="ftco-section">
        <div class="container">
            <div class="p-2"></div>
            <div class="row justify-content-center">
                <div class="shadow-lg col-md-7 col-lg-8 bg-light rounded">
                    <div class="p-4 p-md-5">
                        <form action="/ajouterDep" method="POST">
                            <div class="form-group d-flex">
                                <label class="col-sm-4 col-form-label">ID Département</label>
                                <input type="text" class="form-control rounded-left" placeholder="ID Département" name="idDep" id="idDep" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control rounded-left" placeholder="Nom Département" name="nomDep" required>
                            </div>
                            <div class="form-group d-flex">
                                <label class="col-sm-5 col-form-label">Email Chef Département</label>
                                <select class="custom-select my-1 mr-sm-2" id="selectedEmailCD">
                                    <% data1.forEach(entry => { %>
                                    <option value="<%= entry.email %>"><%= entry.email %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control rounded-left" placeholder="Confirmer le Chef du Département" name="confEMAILCD" id="confirmedEMAILCD" required>
                            </div>
                            <div class="form-group d-flex">
                                <label class="col-sm-5 col-form-label">Direction</label>
                                <select class="custom-select my-1 mr-sm-2" id="selectedD">
                                    <% data2.forEach(entry => { %>
                                    <option value="<%= entry.IDdirection %>"><%= entry.IDdirection %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control rounded-left" placeholder="Confirmer la Direction" name="confD" id="confirmedD" required>
                            </div>
                            <div class="form-group d-flex">
                                <label class="col-sm-4 col-form-label">ID Equipe</label>
                                <input type="text" class="form-control rounded-left" placeholder="ID Département" name="idE" id="idE" required>
                            </div>
                            <div class="form-group d-flex">
                                <label class="col-sm-5 col-form-label">Email Chef Equipe</label>
                                <select class="custom-select my-1 mr-sm-2" id="selectedCE">
                                    <% data3.forEach(entry => { %>
                                        <option value="<%= entry.email %>"><%= entry.email %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control rounded-left" placeholder="Confirmer le Chef de l'Equipe" name="confCE" id="confirmedCE" required>
                            </div>
                            <div class="form-group d-flex">
                                <label class="col-sm-5 col-form-label">Capacité de l'Equipe</label>
                                <input type="text" class="form-control rounded-left" placeholder="Capacité" name="capE" required>
                            </div>
                            <div class="form-group"></div>
                            <button type="submit" id="submitBtn" class="form-control btn btn-success rounded submit px-3">Ajouter</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="p-4"></div>
    <div class="p-4"></div>
</body>
<footer class="fixed-bottom">
    <div style="background-color:#00930080;">
        <div class="footer-copyright text-center py-2 text-light" style="background-color:#00930080;">
            © <script>document.write(new Date().getFullYear())</script> Copyright | Direction des resources Humaine - DRH
        </div>
    </div>
</footer>
<script>
    document.getElementById("idDep").value = (Math.random() + 1).toString(36).substring(2);
    document.getElementById("idE").value = (Math.random() + 1).toString(36).substring(2);
</script>
<script>
    const validSubmit = new Array(3).fill(false);
    $(document).ready(function() {
        $('#confirmedEMAILCD').on('input', function() {
            var input = $(this);
            var confirmedEMAILCD = input.val();
            text = document.getElementById("selectedEmailCD").options[document.getElementById("selectedEmailCD").selectedIndex].text;
            if (confirmedEMAILCD == text) {
                validSubmit[0]=true;
            } else {
                validSubmit[0]=false;
            }
            if (validSubmit[0]==false || validSubmit[1]==false || validSubmit[2]==false){
                document.getElementById("submitBtn").disabled = true;
            }else{
                document.getElementById("submitBtn").disabled = false;
            }
        });
        $('#confirmedD').on('input', function() {
            var input = $(this);
            var confirmedD = input.val();
            text = document.getElementById("selectedD").options[document.getElementById("selectedD").selectedIndex].text;
            if (confirmedD == text) {
                validSubmit[2]=true;
            } else {
                validSubmit[2]=false;
            }
            if (validSubmit[0]==false || validSubmit[1]==false || validSubmit[2]==false){
                document.getElementById("submitBtn").disabled = true;
            }else{
                document.getElementById("submitBtn").disabled = false;
            }
        });
        $('#confirmedCE').on('input', function() {
            var input = $(this);
            var confirmedCE = input.val();
            text = document.getElementById("selectedCE").options[document.getElementById("selectedCE").selectedIndex].text;
            if (confirmedCE == text) {
                validSubmit[1]=true;
            } else {
                validSubmit[1]=false;
            }
            if (validSubmit[0]==false || validSubmit[1]==false || validSubmit[2]==false){
                document.getElementById("submitBtn").disabled = true;
            }else{
                document.getElementById("submitBtn").disabled = false;
            }
        });
        });
</script> 
